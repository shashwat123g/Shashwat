@using Shashwat.ViewModel
@model PieListViewModel
 

@foreach (var pie in Model.Pies)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@pie.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@pie.Price.ToString("c")</h3>
                <h3>
               <tr>   <td>  <a asp-controller="Pie" asp-action="Details" asp-route-id="@pie.PieId">@pie.Name</a></td></tr>
                </h3>
                <p>@pie.ShortDescription</p>
                 <p>@pie.LongDescription</p>
            </div>
        </div>
    </div>
}
